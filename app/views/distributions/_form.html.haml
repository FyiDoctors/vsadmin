= form_for @distribution do |f|
  - if @distribution.errors.any?
    #error_explanation
      %h2= "#{pluralize(@distribution.errors.count, "error")} prohibited this distribution from being saved:"
      %ul
        - @distribution.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
