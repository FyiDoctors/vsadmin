= form_for @feedback do |f|
  - if @feedback.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feedback.errors.count, "error")} prohibited this feedback from being saved:"
      %ul
        - @feedback.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :feedback_type
    = f.text_field :feedback_type
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :browser
    = f.text_field :browser
  .actions
    = f.submit 'Save'
