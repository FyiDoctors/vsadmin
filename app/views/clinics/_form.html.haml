= form_for @clinic do |f|
  - if @clinic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@clinic.errors.count, "error")} prohibited this clinic from being saved:"
      %ul
        - @clinic.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :model_id
    = f.text_field :model_id
  .field
    = f.label :admin
    = f.check_box :admin
  .field
    = f.label :email
    = f.check_box :email
  .actions
    = f.submit 'Save'
